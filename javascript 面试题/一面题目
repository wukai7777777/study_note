杜志茹

let xhr = new XMLHttpRequest()

xhr.open('GET', url, true)
xhr.onload = function(e) {
  if(this.status === 200) {
    let result = JSON.parse(this.responseText);
    resolve(result)
  }
}
xhr.onerror = function(err) {
  reject(err)
}
xhr.send()


